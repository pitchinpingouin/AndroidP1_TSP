<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AssociationFormActivity">

    <TextView
        android:id="@+id/association_gender_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="48dp"
        android:background="#BAFF6F6F"
        android:gravity="center_horizontal"
        android:hint="gender title" />


    <TextView
        android:id="@+id/association_words_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:background="#88DB8FFF"
        android:text="association of words" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="530dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/description_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="description" />

            <ImageView
                android:id="@+id/notes_image"
                android:layout_width="203dp"
                android:layout_height="270dp"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_menu_camera"
                tools:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="24dp"
        android:text="valider" />


</LinearLayout>
